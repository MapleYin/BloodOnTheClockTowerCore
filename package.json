{
  "name": "blood_on_the_clock_tower_core",
  "version": "1.0.0",
  "description": "a story teller tools for wx",
  "main": "build/index.js",
  "repository": "git@github.com:MapleYin/BloodOnTheClockTowerCore.git",
  "author": "Yin Heng <maple1058@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsup && yarn copy-dts",
    "dev": "tsc --watch",
    "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" build",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm",
    "test": "jest --config jest.config.js"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "@jest/globals": "^29.7.0",
    "copyfiles": "^2.4.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.3.0",
    "typescript": "^4.9.5"
  }
}
